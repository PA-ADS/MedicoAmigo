<p id="notice"><%= notice %></p>

<h1>Listing Solicitacoes</h1>

<table>
  <thead>
    <tr>
      <th>Instituicao</th>
      <th>Medico</th>
      <th>Clinica</th>
      <th>Paciente</th>
      <th>Solicitante</th>
      <th>Data emissao</th>
      <th>Data agendamento</th>
      <th>Hora agendamento</th>
      <th>Status</th>
       <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solicitacoes.each do |solicitacao| %>
      <tr>
        <td><%= solicitacao.instituicao.nome %></td>
        <td><%= solicitacao.agenda.medico.nome %></td>
        <td><%= solicitacao.agenda.clinica.nome %></td>
        <td><%= solicitacao.paciente.nome %></td>
        <td><%= solicitacao.solicitante %></td>
        <td><%= solicitacao.data_emissao %></td>
        <td><%= solicitacao.data_agendamento %></td>
        <td><%= solicitacao.hora_agendamento %></td>
        <td><%= solicitacao.status %></td>
        <td><%= link_to 'Detalhes', solicitacao %></td>
      </tr>
    <% end %>
  </tbody>
</table>