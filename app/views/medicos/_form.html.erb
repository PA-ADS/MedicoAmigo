<%= form_for(@medico) do |f| %>
  <% if @medico.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medico.errors.count, "error") %> 
        prohibited this medico from being saved:</h2>
      <ul>
      <% @medico.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :cpf %><br>
    <%= f.text_field :cpf %>
  </div>
  <div class="field">
    <%= f.label :crm %><br>
    <%= f.text_field :crm %>
  </div>
  <div class="field">
    <%= f.label :crm_uf %><br>
    <%= collection_select(:medico, :crm_uf, Estado.all, :uf, :uf, prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone %>
  </div>
  <div class="field">
    <%= f.label :especialidade_id %><br>
    <%= collection_select(:medico, :especialidade_id, Especialidade.all, :id, :descricao, prompt: true) %>
  </div>
  <% if @medico.new_record? %>
  <%= f.fields_for :usuario do |usuario_form| %>
    <div class="field">
      <%= usuario_form.label :email %><br>
      <%= usuario_form.text_field :email %>
    </div>
    <div class="field">
      <%= usuario_form.label :password %><br>
      <%= usuario_form.password_field :password %>
    </div>
  <% end %>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


