<%- model_class = Medico -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @medico.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cpf) %>:</strong></dt>
  <dd><%= @medico.cpf %></dd>
  <dt><strong><%= model_class.human_attribute_name(:crm) %>:</strong></dt>
  <dd><%= @medico.crm %></dd>
  <dt><strong><%= model_class.human_attribute_name(:crm_uf) %>:</strong></dt>
  <dd><%= @medico.crm_uf %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefone) %>:</strong></dt>
  <dd><%= @medico.telefone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:especialidade_id) %>:</strong></dt>
  <dd><%= @medico.especialidade_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:usuario_id) %>:</strong></dt>
  <dd><%= @medico.usuario_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              medicos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_medico_path(@medico), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              medico_path(@medico),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
