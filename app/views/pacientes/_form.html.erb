  <div class="field">
    <%= f.label :cidade %><br>
    <%= collection_select(:paciente, :cidade, Municipio.where(:uf => @paciente.uf), :id, :nome, 
      {prompt: true}, {:id => "cidade_ajax"}) %>
  </div>
  <div class="field">
    <%= f.label :cep %><br>
    <%= f.text_field :cep %>
  </div>
  <div class="field">
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone %>
